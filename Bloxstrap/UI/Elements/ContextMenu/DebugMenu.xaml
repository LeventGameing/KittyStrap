<base:WpfUiWindow x:Class="Bloxstrap.UI.Elements.ContextMenu.DebugMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bloxstrap.UI.Elements.ContextMenu"
        xmlns:base="clr-namespace:Bloxstrap.UI.Elements.Base"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        MinWidth="420"
        MinHeight="420"
        ResizeMode="NoResize"
        Background="{ui:ThemeResource ApplicationBackgroundBrush}"
        ExtendsContentIntoTitleBar="True"
        WindowStartupLocation="CenterScreen"
        Title="Log Viewer" Height="600" Width="900">

    <Grid>
        <Grid.Background>
            <DynamicResource ResourceKey="WindowBackgroundGradient" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- TitleBar -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
            <RowDefinition Height="Auto" />
            <!-- SearchBox -->
            <RowDefinition Height="*" />
            <!-- LogListBox -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Padding="8"
                     x:Name="RootTitleBar"
                     HorizontalAlignment="Stretch"
                     Title="Log Viewer"
                     ShowMinimize="False"
                     ShowMaximize="False"
                     CanMaximize="False"
                     KeyboardNavigation.TabNavigation="None"
                     Icon="pack://application:,,,/Bloxstrap.ico"
                     Grid.Row="0" VerticalAlignment="Center" />

        <Grid Grid.Row="1" Margin="0,15,0,10" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="0" Content="Clear Logs" Click="ClearLogs_Click" Icon="Delete48" HorizontalAlignment="Stretch" Margin="2,0" />
            <ui:Button Grid.Column="1" Content="Copy All" Click="CopyLogs_Click" Icon="Copy24" HorizontalAlignment="Stretch" Margin="2,0" />
            <ui:Button Grid.Column="2" Content="Open Logs Folder" Click="OpenLogsFolder_Click" Icon="FolderOpen16" HorizontalAlignment="Stretch" Margin="2,0" />
            <ui:Button Grid.Column="3" Content="Refresh Logs" Click="RefreshLogs_Click" Icon="ArchiveMultiple20" HorizontalAlignment="Stretch" Margin="2,0" />
            <ui:Button Grid.Column="4" Content="Export Logs" Click="SaveLogsAs_Click" Icon="Save16" HorizontalAlignment="Stretch" Margin="2,0" />
            <ui:Button Grid.Column="5" Content="Copy Selected" Click="CopySelected_Click" Icon="Copy24" HorizontalAlignment="Stretch" Margin="2,0" />
        </Grid>

        <!-- Search Box -->
        <Grid
            Grid.Row="2"
            Height="40"
            Margin="0,0,1,5">

            <ui:TextBox
                x:Name="SearchBox"
                Height="32"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                BorderThickness="0"
                FocusVisualStyle="{x:Null}"
                FontSize="14"
                Icon="Search48"
                PlaceholderText="Search logs..."
                TextChanged="SearchBox_TextChanged" />
        </Grid>


        <!-- Froststrap Logs ListBox -->
        <ListBox x:Name="LogListBox"
                 Grid.Row="3"
                 Background="Transparent"
                 Foreground="White"
                 FontSize="12"
                 FontFamily="Consolas"
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Top"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</base:WpfUiWindow>